<% provide(:title, "Ustawienia połączenia do bazy POLTAX") %>
<h1>Ustawienia połączenia do bazy POLTAX</h1>


<div class="row">
  <div class="span4">
	<b><i>Link do bazy danych:</i></b>
  </div>
  <div class="span8">
	<%= @poltaxconn.database+":1521/PLTX" %>
  </div>
</div>  
<div class="row">
  <div class="span4">
	<b><i>Nazwa Użytkownika:</i></b>
  </div>
  <div class="span8">
	<%= @poltaxconn.username %>
  </div>
</div>  
<div class="row">
  <div class="span4">
	<b><i>Hasło:</i></b>
  </div>
  <div class="span8">
	<%= @poltaxconn.password%>
  </div>
</div> 
<% if current_user.admin? %>
<p style="padding-top:20px">
		<%= link_to "Edytuj dane", edit_poltaxconn_path(@poltaxconn), class: "btn btn-large btn-primary" %>
		<%= link_to "Testuj połączenie", {controller: 'poltaxconns', action: 'test'},method: :post, class: "btn btn-large btn-primary" %>
</p>
<% end %>