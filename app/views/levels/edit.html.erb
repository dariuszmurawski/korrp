<% provide(:title, 'Edycja przedziału punktowego ryzyka') %>
<h1>Edycja przedziału punktowego ryzyka</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@level, :builder => Judge::FormBuilder) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>  

	  <%= f.label :description,"opis przediału punktowego ryzyka" %>
      <%= f.text_field :description,  disabled: 'disabled' %>
		<div>
			<%= f.label :value,"wartość przedziału punktowego ryzyka" %>
			<%= f.text_field :value, :validate => true %>
		</div> 
	  <%= f.hidden_field :lock_version %>
	  
      <%= f.submit "Akceptuj zmiany", class: "btn btn-large btn-primary" %>
      <%= link_to "Anuluj zmiany", levels_path, class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="span6 offset3">
  	<center><b>Aktualnie obowiązaujące przedziały ryzyka:</b></center>
 	 <table class="table table-striped check">
		<tr>
			<th>opis przediału punktowego ryzyka</th>
			<th>wartość przedziału punktowego ryzyka</th>
		</tr>
  		<% @levels.each do |level_tmp| %>
  			<tr>
  				<td><%= level_tmp.description %></td>
  				<td><%= level_tmp.value %></td>
  			</tr>	
  		<% end %>
	</table> 	
  </div>
</div>