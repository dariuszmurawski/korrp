<% provide(:title, 'Wyszukiwanie podatnika - ORGANIZACJI z POLTAX') %>
<h1>Wyszukiwanie podatnika - ORGANIZACJI z POLTAX</h1>


<%= form_tag searchresult_path,method: :get do %>
<div class="row">
	<div class="span6 offset3">
		<%= label_tag "Wyszukaj organizację poprzez numer NIP"%>
  		<%= text_field_tag "nip" %>  		
    </div>
    <div class="span6 offset3">
		<%= label_tag "Wyszukaj organizację poprzez numer REGON"%>
  		<%= text_field_tag "regon" %>  		
    </div>
    <div class="span6 offset3">
		<%= label_tag "Wyszukaj osobę poprzez Nazwę"%>
  		<%= text_field_tag "name" %>  		
    </div>
</div>  





<div class="row">
	<div class="span6 offset3">
      <%= hidden_field_tag 'type','organ'%>
      <%= submit_tag "Wyszukaj", class: "btn btn-large btn-primary" %>
      <%= link_to "Anuluj wyszukiwanie", new_check_path, class: "btn btn-large btn-primary" %>
    </div>
</div>


<% end %>