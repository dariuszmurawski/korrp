<% provide(:title, 'Rejestracja') %>
<h1>Rejestracja Użytkownika</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

	  <%= f.label :login,"login" %>
      <%= f.text_field :login %>

	  <%= f.label :forename,"imię" %>
      <%= f.text_field :forename %>

      <%= f.label :name,"nazwisko" %>
      <%= f.text_field :name %>

      <%= f.label :email,"adres e-mial" %>
      <%= f.text_field :email %>
      
      <% if current_user.admin? %>
      		<%= f.label :admin ,"uprawnienia kierownika"%>
      		<%= f.select :admin, [['TAK', true], ['NIE', false]] %>
      <%end%>

      <%= f.label :password,"hasło" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Potwierdzenie hasła" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Utwórz konto", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>